@using HairSalon.Models;

<h2>Add a New Specialty</h2>
<form action="/specialty/add" method="post">
  <label for="newSpecialty">Specialty: </label>
  <input type="text" name="newSpecialty">
  <button type="submit" name="button">Add</button>
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var specialty in Model)
      {
        <li>@specialty.GetSpecialty()</li>
      }
    </ul>
  }

</form>
