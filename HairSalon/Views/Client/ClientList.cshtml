<head>
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>


<h2>Current Clients for this Stylist</h2>
<ul>
@foreach (var client in Model)
{
  <li>@client.GetClient() | <a href="/clients" class="deleteAction" id="@client.GetId()">Delete</a></li>
}
</ul>
<a href="/">Home</a>

<form id="secret-form" action="/client/delete" method="post">
  <input type="hidden" name="clientId" value="">
</form>

<script type="text/javascript">
  $("#secret-form").hide();
  $(document).ready(function() {
    $("a.deleteAction").click(function(event) {
      event.preventDefault();
      $("form#secret-form input").val(this.id);
      $("form#secret-form").submit();
    })
  })
</script>
